@section Scripts{
    <script>
        var app = angular.module("app-test", ['ngSanitize', 'ngAnimate', 'ngTouch']);

        app.controller("testController", function ($scope, $http, $timeout, $window) {

            var vm = this;
            vm.selectedFile;

